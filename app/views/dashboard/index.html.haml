%h2.text-info="Welcome #{current_user.last_name} #{current_user.first_name}"
%br
.row-fluid
  .span3.alert
    %h4.text-success General Info
    %br
    %table.table.table-bordered{:style => 'font-size: 12px;'}
      %tr
        %td # Contacts in Address Book
        %td
          %b=@contact_count
      %tr
        %td # Groups
        %td
          %b=@group_count
      %tr
        %td # Message Templates
        %td
          %b=@bulk_message_template_count
    %br
    %h4 Incoming SMS
    %br
    %table.table.table-bordered{:style => 'font-size: 12px;'}
      %tr
        %td # Today
        %td=@incoming_messages_today
      %tr
        %td # This Month
        %td=@incoming_messages_this_month

    %h4.text-success Competitions
    %br
    %table.table.table-bordered{:style => 'font-size: 12px;'}
      %tr
        %td # Active Competitions
        %td=@active_competitions


