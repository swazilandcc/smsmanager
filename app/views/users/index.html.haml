%h1 System Users
%br
%table.table.table-bordered.table-stripped.table-condensed
  %thead
    %tr
      %th First Name
      %th Last Name
      %th E-Mail
      %th
      %th
      %th
  %tbody
  -@users.each do |user|
    %tr
      %td
        =user.first_name
      %td
        =user.last_name
      %td
        =user.email
      %td=link_to 'Show', user, :class => 'btn'
      %td=link_to 'Edit', edit_user_path(user.id), :class => 'btn btn-primary'
      %td=link_to 'Delete', user, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'btn btn-danger'
%br
=link_to 'New System User', new_user_path, :class => 'btn btn-success'
